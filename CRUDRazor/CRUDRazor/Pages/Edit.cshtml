@page
@model CRUDRazor.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit, @Model.Customer.Id</h2>

<form method="post">    
    <input asp-for="Customer.Id" type="hidden" />
    <div>
        <label asp-for="Customer.Name"></label>
        <div>
            <input asp-for="Customer.Name" />
            <span asp-validation-for="Customer.Name"></span>
        </div>
    </div>
    <div>
        <button type="submit" asp-page-handler="post">Save</button>
    </div>
</form>